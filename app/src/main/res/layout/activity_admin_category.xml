<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forAdmin.AdminCategory">
    <TextView
        android:id="@+id/choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose category"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:id="@+id/first_liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:layout_below="@id/choose">
        <ImageView
            android:id="@+id/car"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/car"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/motorcycle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/motorcycle"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/boat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/boat"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/service"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/service"
            android:layout_margin="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/second_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:layout_below="@id/first_liner">
        <ImageView
            android:id="@+id/dress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/dress"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/shoes"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sneakers"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/sweater"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sweater"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/hats"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/hats"
            android:layout_margin="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/three_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:layout_below="@id/second_line">
        <ImageView
            android:id="@+id/smartphone"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/smartphone"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/desktop"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/desktop"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/camera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/camera"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/fridge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/fridge"
            android:layout_margin="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/four_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:layout_below="@id/three_line">
        <ImageView
            android:id="@+id/bicycle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/bicycle"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/books"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/book"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/packaging"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/packaging"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/guitar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/guitar"
            android:layout_margin="10dp"
            />

    </LinearLayout>

</RelativeLayout>